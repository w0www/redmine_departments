<% if authorize_for_with_global(:departments, :edit, true) %>
	<div class="contextual">
	  <%= link_to(l(:title_department_edit), edit_department_path, :class => 'icon icon-edit') %>
	</div>
<% end %>
<h2><%= link_to l(:label_department_plural), :controller => 'departments', :action => 'index' %> &#187; <%= @department.nombre %> (<%= @department.codigo %>)</h2>

<div id="department-show">
  <%= render :partial => 'datos_oficina', :locals => { :department => @department }%>
</div>




<h3><%= l(:label_member_plural) %></h3>
<div id="department-contacts">
  <%= render :partial => 'departments/users/list', :locals => { :department => @department }%>
</div>

<h3><%= l(:label_issue_plural) %></h3>
<div id="department-issues">
  <%= render :partial => 'departments/issues/list', :locals => { :department => @department }%>
</div>

<% html_title(l(:title_department_view)) -%>
